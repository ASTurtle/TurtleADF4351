{
    "version": 4,
    "configurations": [
        {
            /** 
             * ms-vscode.cmake-tools plugin should be installed.
             * 
             * It provides data for C/C++ plugin,
             * such as include paths, browse paths, defines, etc.
             */
            //"compilerPath": "/usr/bin/clangd",
            "compilerPath": "/usr/bin/arm-none-eabi-gcc",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/lib/**",
                "${workspaceFolder}/Core/Inc/**",
                "${workspaceFolder}/Core/Src/**",
                "${workspaceFolder}/build/**",
                // "/usr/arm-none-eabi/include/**",
                // "/usr/arm-none-eabi/lib/gcc/arm-none-eabi/13.3.1/include/**",
                // "/usr/arm-none-eabi/lib/gcc/arm-none-eabi/13.3.1/include-fixed/**"
            ],
            "name": "STM32",
            "configurationProvider": "ms-vscode.cmake-tools",
            "intelliSenseMode": "${default}"
        }
    ]
}